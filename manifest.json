{
  "manifest_version": 2,
  "name": "Yt-Music tweaks",
  "version": "1.1",
  "description": "yes",
  "permissions": [
    "activeTab",
    "https://music.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"]
    }
  ],
  "applications": {
    "gecko": {
      "id": "your-extension@example.com",
      "update_url": "https://isahooman.github.io/Yt-music-tweaks/update.json"
    }
  }
}
